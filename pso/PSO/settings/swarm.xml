  <settings>
    
    <no_of_particle>10</no_of_particle>

    <no_of_cluster>3</no_of_cluster>

    <w_inertia>0.72</w_inertia>

    <c1_global_weight_constant>1.49</c1_global_weight_constant>

    <c2_local_weight_constant>1.49</c2_local_weight_constant>
    
